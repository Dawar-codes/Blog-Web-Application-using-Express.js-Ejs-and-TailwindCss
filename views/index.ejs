<%- include('partials/header.ejs') %>

    <!--  hero  -->

    <div class="relative bg-cover bg-center h-screen " style= "background-image: url('images/Cover\ image.jpg')"> 
        <div class="absolute inset-0 bg-black bg-opacity-50"></div>
        
        <div class="relative text-white text-center flex flex-col gap-5 items-center justify-center h-full px-4">
            <h1 class="text-4xl font-bold md:text-6xl">Welcome to the Tech Blog</h1>
            <p class="text-gray-300 text-lg md:text-2xl">Stay updated with the latest trends in technology and software development.</p>
            <a href="/newpost" class="border-orange-400 border-[1px] p-3 rounded-xl font-semibold bg-orange-500 hover:bg-transparent hover:text-orange-600 transition duration-300 ease-in-out">Create post</a>
        </div>
    </div>

    
    
    <!-- blogs  -->

    <div class="bg-gray-100 py-12">
        <div class="max-w-6xl mx-auto px-4">
            <!-- Blog Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <!-- Blog Post 1 -->
                <% if (posts.length < 1) { %>
                    <h1 class="text=center text-lg col-span-2 justify-self-center">
                        You don't have any blogs yet. Please create a
                        new blog.
                    </h1>
                    <% } else {%>
                        <h1 class="text=center text-white text-lg md:text-2xl md:px-20 md:py-3 col-span-2 justify-self-center font-bold px-10 py-2 rounded-full bg-orange-600">Your Blogs</h1>
                        <% } %>
        
              <% posts.forEach(function(post, index) { %>
                 
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                    <div class="p-6">
                        <h2 class="text-2xl font-bold mb-4 text-gray-800"><%= post.title%></h2>
                        <p class="text-gray-600 mb-6"><%= post.body %></p>
                        <div class="flex gap-5">
                            <form action="/delete/<%= index %>" method="POST">
                                <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded">Delete</button>
                            </form>
                            <form action="/edit/<%= index %>" method="GET">
                                <button type = "submit" class="bg-green-600 text-white px-4 py-2 rounded">Edit</button>
                            </form>
                        </div>
                    </div>
                </div>

              <% }); %>

            </div>
        </div>
    </div>

    <!-- footer -->
   
    <%- include('partials/footer.ejs') %>